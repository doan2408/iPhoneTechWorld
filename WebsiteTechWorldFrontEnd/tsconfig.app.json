{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,  // Cho phép sử dụng .js file trong dự án
    "checkJs": false,  // Bỏ qua kiểm tra kiểu đối với file .js
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
